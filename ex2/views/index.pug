extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 #[a.w3-btn.w3-green(href="/") Home ] Contracts List
    .w3-container
      table.w3-table-all
        tr
          th _id
          th  Data de Início de Contrato
          th  Data de Fim de Contrato
          th  Nome da Instituição
          th  Áreas de Investigação
        each s in contracts
          tr
            td
              a(href="/"+s._id)= s._id
            td= s.DataInicioContrato
            td= s.DataFimContrato
            td
              a(href="/inst/"+s.NIPCInstituicao)= s.NomeInstituicao
            td= s.AreasInvestigacao
              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}
    